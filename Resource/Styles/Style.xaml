<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Стиль для кнопок.  -->
    <Style x:Key="ButtonOperation" TargetType="Button">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="MinWidth" Value="20" />
        <Setter Property="MaxWidth" Value="200" />
        <Setter Property="MaxHeight" Value="90" />
    </Style>

    <!--  Стиль для текстового поля суммы операции.  -->
    <Style x:Key="TextboxSumOperation" TargetType="TextBox">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!--  Стиль для комбобокс типа операций.  -->
    <Style x:Key="ComboboxTypeOperation" TargetType="ComboBox">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
</ResourceDictionary>
